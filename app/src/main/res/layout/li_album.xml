<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#aaa"
        android:padding="2dp"
        android:singleLine="true"
        android:text="1"
        android:textIsSelectable="true" />

    <ImageButton android:id="@+id/add_fetch"
        android:src="@drawable/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.mayank.krishnaapps.idt.SyncedHorizontalScrollView
        android:layout_width="match_parent" android:layout_height="match_parent" android:scrollbars="none">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#aaa"
                android:padding="2dp"
                android:singleLine="true"
                android:textIsSelectable="true" />

            <EditText
                android:id="@+id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#fff"
                android:hint="url"
                android:padding="2dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="bg.1.1"
                android:background="#fff"
                android:singleLine="true" />

            <EditText
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#fff"
                android:hint="album name"
                android:padding="2dp"
                android:singleLine="true" />
            <Button android:id="@+id/setLyrics"
                android:text="Set Lyrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/arte"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:src="@mipmap/ic_launcher_round" />
            <LinearLayout android:orientation="vertical"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/lastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:allowUndo="false"
                    android:background="#eee"
                    android:scrollHorizontally="false"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/newLastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:allowUndo="false"
                    android:background="#ddd"
                    android:scrollHorizontally="false"
                    android:singleLine="true"
                    android:textIsSelectable="true" />
            </LinearLayout>
            <Button
                android:id="@+id/lang_or_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:singleLine="true"
                android:padding="2dp"
                android:text="Lang" />
            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#eee"
                android:singleLine="true"
                android:textIsSelectable="true" />
        </LinearLayout>
    </com.mayank.krishnaapps.idt.SyncedHorizontalScrollView>
</LinearLayout>